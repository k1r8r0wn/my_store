<h1>Items</h1>

<% if @items.empty? %>
  <b>No items in the store</b>
<% else %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Image</th>
        <th>Name</th>
        <th>Created at</th>
        <th>Price</th>
        <th>Delete?</th>
        <th>Raiting</th>
      </tr>
    </thead>
    <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %>.</td>
        <td><%= image_tag item.image, width: '50px', height: '50px' if item.image.present? %></td>
        <td><%= link_to item.name, item_path(item) %></td>
        <td><%= item.created_at %> $</td>
        <td><%= item.price %> $</td>
        <td><%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= item.votes_count %>, <%= link_to '+', upvote_item_path(item) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
